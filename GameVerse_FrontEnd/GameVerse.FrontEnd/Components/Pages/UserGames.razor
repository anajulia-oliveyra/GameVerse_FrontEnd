@page "/user/games"
@inject GamesClient Client
@inject NavigationManager Navigation
@using GameVerse.FrontEnd.Models
@using Microsoft.AspNetCore.Components.Authorization

<h3>Meus Jogos</h3>

@if (games == null)
{
    <p>Carregando...</p>
}
else if (!games.Any())
{
    <p>Você não possui jogos cadastrados.</p>
}
else
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th class="text-end">Preço</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var game in games)
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.Name</td>
                    <td>@game.Description</td>
                    <td class="text-end">@game.Price.ToString("C2")</td>
                    <td>
                        <AuthorizeView Roles="Admin">
                            <button class="btn btn-danger btn-sm" @onclick="() => RemoveGame(game.Id)">Remover</button>
                        </AuthorizeView>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<GameSummary>? games;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            games = await Client.GetUserGamesAsync();
        }
        catch
        {
            Navigation.NavigateTo("/login");
        }
    }

    private async Task RemoveGame(int gameId)
    {
        await Client.RemoveUserGameAsync(gameId);
        games?.RemoveAll(g => g.Id == gameId);
        StateHasChanged();
    }
}
