@page "/"
@inject GamesClient Client

<PageTitle>GameCatalog</PageTitle>

<div class = "mt-2">
    <a class="btn btn-success" href="/signup">Login / Criar Conta</a>
    <a class = "btn btn-primary" role="button" href="/editgame"> New Game</a>
</div>

@if(games is null){
    <p><em>Loading...</em></p>
}
else {

<table class="table table-striped table-bordared table-hover mt-3">
    <thead>
        <tr>
            <th> Id </th>
            <th> Name </th>
            <th> Genre </th>
            <th class="text-end"> Price </th>
            <th> Release Date </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in games){
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>@game.Genre</td>
                <td class="text-end">@game.Price.ToString("C2")</td>
                <td>@game.ReleaseDate</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
}

@code{

    private GameSummary[]?  games;

    protected override void OnInitialized()
    {
        games = Client.GetGames();
    }
}